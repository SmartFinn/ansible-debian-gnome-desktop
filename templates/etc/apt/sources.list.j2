{% if debian_sid|bool %}
deb http://deb.debian.org/debian sid main non-free-firmware{{ " contrib non-free" if non_free|bool }}
{% else %}
deb http://deb.debian.org/debian/ {{ ansible_distribution_release }} main non-free-firmware{{ " contrib non-free" if non_free|bool }}
deb http://deb.debian.org/debian/ {{ ansible_distribution_release }}-updates main non-free-firmware{{ " contrib non-free" if non_free|bool }}
