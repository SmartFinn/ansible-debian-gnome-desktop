{% if debian_sid|bool %}
deb http://{{ debian_mirror }}/debian sid main non-free-firmware{{ " contrib non-free" if non_free|bool }}
{% else %}
deb http://{{ debian_mirror }}/debian/ {{ ansible_distribution_release }} main non-free-firmware{{ " contrib non-free" if non_free|bool }}
deb http://{{ debian_mirror }}/debian/ {{ ansible_distribution_release }}-updates main non-free-firmware{{ " contrib non-free" if non_free|bool }}
deb http://security.debian.org/debian-security {{ ansible_distribution_release }}-security main non-free-firmware{{ " contrib non-free" if non_free|bool }}
{% endif %}